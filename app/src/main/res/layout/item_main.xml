<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="java.util.Arrays" />

        <import type="android.graphics.Color" />

        <variable
            name="model"
            type="com.ftevxk.example.MainItemModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/text_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@{model.title}"
            android:textColor="@android:color/white"
            bind:pressed_shape_radius="@{Arrays.asList(30f, 30f, 0, 0)}"
            bind:pressed_shape_solid_color="@{Color.BLUE}"
            bind:pressed_shape_type="@{`rect`}"
            bind:shape_dash_gap="@{5}"
            bind:shape_dash_width="@{10}"
            bind:shape_radius="@{30}"
            bind:shape_solid_color="@{@color/colorPrimary}"
            bind:shape_stroke_color="@{Color.BLUE}"
            bind:shape_stroke_width="@{2}"
            bind:shape_type="@{`rect`}"
            bind:unit="@{`dp`}" />
    </RelativeLayout>
</layout>